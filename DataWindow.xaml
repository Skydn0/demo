<Window x:Class="AutistSS.DataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Данные" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <RadioButton x:Name="AlphabeticalRadioButton" Content="Сортировать по алфавиту" Checked="RadioButton_Checked" />
            <RadioButton x:Name="AscendingRadioButton" Content="Сортировать по возрастанию" Checked="RadioButton_Checked" />
            <RadioButton x:Name="DescendingRadioButton" Content="Сортировать по убыванию" Checked="RadioButton_Checked" />
            <DataGrid x:Name="DataGrid" AutoGenerateColumns="True" Margin="0,10,0,0" SelectionChanged="DataGrid_SelectionChanged" />
            <Button x:Name="AddButton" Content="Добавить элемент" Click="AddButton_Click" Margin="0,10,0,0" Visibility="Collapsed" />
            <Button x:Name="EditButton" Content="Редактировать элемент" Click="EditButton_Click" Margin="0,10,0,0" Visibility="Collapsed" />
            <Button x:Name="DeleteButton" Content="Удалить элемент" Click="DeleteButton_Click" Margin="0,10,0,0" Visibility="Collapsed" />
            <Button x:Name="BackButton" Content="Назад" Click="BackButton_Click" Margin="0,10,0,0" />
            <Button x:Name="LogoutButton" Content="Выход" Click="LogoutButton_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
