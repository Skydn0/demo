<Window x:Class="AutistSS.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать элемент" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="239*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10,10,10,10" Grid.ColumnSpan="2">
            <TextBlock Text="Имя:" FontFamily="Tahoma" Foreground="Black" />
            <TextBox x:Name="NameTextBox" Margin="0,5,0,0" />
            <TextBlock Text="Значение:" Margin="0,10,0,0" />
            <TextBox x:Name="ValueTextBox" Margin="0,5,0,0" />
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
