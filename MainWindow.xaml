<Window x:Class="AutistSS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Username:" />
            <TextBox x:Name="UsernameTextBox" Margin="0,5,0,0" />
            <TextBlock Text="Password:" Margin="0,10,0,0" />
            <PasswordBox x:Name="PasswordBox" Margin="0,5,0,0" />
            <Button Content="Login" Click="LoginButton_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
